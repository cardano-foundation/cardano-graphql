{
  "name": "cardano-graphql",
  "version": "1.0.0-rc.2",
  "description": "GraphQL API for Cardano with client-consumable types generated",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "codegen:external": "graphql-codegen --config ./codegen.external.yml",
    "codegen:internal": "graphql-codegen",
    "lint": "eslint \"src/**/*.ts\"",
    "dev": "stmux -w always -e ERROR -M -- [[ \"yarn start:service-deps\" .. \"yarn codegen:internal --watch\" ]]",
    "dev:test": "HASURA_URI=http://localhost:8090/v1/graphql stmux -w always -e ERROR -M -- [[ \"yarn dev\" .. \"tsc --watch --noEmit\" .. \"yarn test:integration --watchAll\" ]]",
    "dev:start": "HASURA_URI=http://localhost:8090/v1/graphql stmux -w always -e ERROR -M -- [[ \"yarn start:service-deps\" .. \"ts-node-dev --no-notify --respawn --transpileOnly  src/index.ts\" ]]",
    "build": "rm -rf dist && yarn codegen:internal && yarn codegen:external && tsc && cp src/schema.graphql dist/",
    "test:integration": "NODE_ENV=test TEST_MODE=integration jest suite",
    "test:e2e": "NODE_ENV=test TEST_MODE=e2e jest suite",
    "start": "HASURA_URI=http://localhost:8090/v1/graphql node dist/index.js",
    "start:service-deps": "docker-compose -f test/docker-compose.service-deps.yml up",
    "stop:service-deps": "docker-compose -f test/docker-compose.service-deps.yml down",
    "start:sample-stack": "docker-compose -f test/docker-compose.test.db-sample.yml up",
    "stop:sample-stack": "docker-compose -f test/docker-compose.test.db-sample.yml down",
    "loadtest:byron-staging": "artillery run test/loadtest/byron-staging-config.yml",
    "create-db-snapsot": "yarn start:mainnet -d && sh ./test/postgres/dump_when_block_height_reached.sh http://localhost:3100/graphql cexplorer && yarn stop:mainnet -v"
  },
  "contributors": [
    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)",
    "Sam Jeston <sam.jeston@gmail.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/input-output-hk/cardano-graphql/issues"
  },
  "homepage": "https://github.com/input-output-hk/cardano-graphql#README.md",
  "dependencies": {
    "apollo-link-http": "^1.5.15",
    "apollo-link-retry": "^2.2.15",
    "apollo-server": "^2.8.0",
    "cross-fetch": "^3.0.4",
    "eslint-plugin-jest": "^22.15.2",
    "graphql": "^14.4.2",
    "graphql-bigint": "^1.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-datetime": "^0.2.4",
    "lodash.isempty": "^4.4.0",
    "promise-exponential-retry": "^1.0.3",
    "ts-custom-error": "^3.1.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/typescript": "^1.5.0",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.5.0",
    "@graphql-codegen/typescript-resolvers": "^1.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/jest": "^24.0.18",
    "@types/lodash.isempty": "^4.4.6",
    "@types/node": "^12.6.8",
    "@types/node-fetch": "^2.5.4",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "apollo-boost": "^0.4.4",
    "apollo-server-core": "^2.8.1",
    "apollo-server-testing": "^2.8.1",
    "artillery": "^1.6.0-29",
    "bignumber.js": "9.0.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-watch": "^6.0.0",
    "graphql-tag": "^2.10.1",
    "jest": "^24.9.0",
    "stmux": "^1.7.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "3.5.3"
  },
  "files": [
    "dist/*",
    "!dist/__test__",
    "!dist/**/*.test.*",
    "LICENSE",
    "LICENSE_NOTICE"
  ]
}
