{
  "name": "cardano-graphql-cli",
  "version": "1.0.0-rc.4",
  "description": "Management tool for managing a Cardano GraphQL deployment",
  "main": "./bin/index.js",
  "bin": {
    "cgql": "./bin/index.js"
  },
  "scripts": {
    "add-global": "yarn global add file:$PWD",
    "build": "tsc",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly  src/index.ts",
    "lint": "eslint -c ../.eslintrc.json \"src/**/*.ts\"",
    "prepare": "yarn build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/input-output-hk/cardano-graphql.git"
  },
  "keywords": [
    "Cardano",
    "Blockchain",
    "GraphQL",
    "CLI"
  ],
  "contributors": [
    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/input-output-hk/cardano-graphql/issues"
  },
  "homepage": "https://github.com/input-output-hk/cardano-graphql/cli#README.md",
  "dependencies": {
    "chalk": "^3.0.0",
    "clear": "^0.1.0",
    "commander": "^5.0.0",
    "cross-fetch": "^3.0.4",
    "figlet": "^1.3.0",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "js-yaml": "^3.13.1",
    "password-generator": "^2.2.3"
  },
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.12.2",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-watch": "^6.0.1",
    "jest": "^25.1.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "3.5.3"
  },
  "files": [
    "dist/*",
    "!dist/__test__",
    "!dist/**/*.test.*",
    "LICENSE",
    "LICENSE_NOTICE"
  ]
}
