    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)",
    "James Sweetland"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/input-output-hk/cardano-graphql/issues"
  },
  "homepage": "https://github.com/input-output-hk/cardano-graphql/blob/master/packages/chain-follower/README.md",
  "files": [
    "dist/*",
    "!dist/__test__",
    "!dist/**/*.test.*",
    "LICENSE",
    "NOTICE"
  ],
  "dependencies": {
    "@cardano-graphql/util": "5.1.0",
    "@cardano-ogmios/client": "^4.0.0-beta.9",
